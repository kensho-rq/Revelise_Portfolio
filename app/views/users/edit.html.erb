<div class="container">
    <h1>ユーザー情報の編集</h1>
    <div class="edit-form">

    <img src="<%= "/user_images/#{@user.name_image}" %>">

    <%= form_tag("/users/#{@user.id}/update", {multipart: true}) do %>
        <div class="edit-text">
        <p>ユーザー名</p><br/>
            <% @user.errors.full_messages_for(:name).each do |message| %>
                <div class="form-error">
                    <%= message %>
                </div>
            <% end %>
            <input name="name" value="<%= @user.name %>" class="edit-i">
        <p>プロフィール画像</p>
                <% @user.errors.full_messages_for(:name_image).each do |message| %>
                    <div class="form-error">
                        <%= message %>
                    </div>
                <% end %>
                <div class="field image">
                    <%= form_with(model: @blog, local: true) do |form| %>

                        <% @user.errors.full_messages_for(:name_image).each do |message| %>
                            <div class="form-error">
                                <%= message %>
                            </div>
                        <% end %>

                        <div id="img_field" onClick="$('#file').click()" >
                            <i class="fas fa-image"></i><i class="fas fa-file-upload add"></i>
                        </div>

                        <%= form.file_field :image, class: "image", style: "display:none;", id: "file"%>
                    <% end %>
                </div>
        <p>メールアドレス</p><br/>
            <% @user.errors.full_messages_for(:email).each do |message| %>
                <div class="form-error">
                    <%= message %>
                </div>
            <% end %>
            <input name="email" value="<%= @user.email %>" class="edit-i" >

            <p>プロフィール&nbsp&nbsp;(200文字以内)</p>
            <% @user.errors.full_messages_for(:profile).each do |message| %>
                <div class="form-error">
                    <%= message %>
                </div>
            <% end %>
            <textarea name="profile" class="profile"><%= @user.profile %></textarea>

            <input type="submit" value="保存" class="edit-btn">
        </div>
    <% end %>

    </div>
</div>
